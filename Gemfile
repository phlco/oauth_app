# A sample Gemfile created with `$ bundle init`

# URL for a Rubygems server where we'll download our gems
source "https://rubygems.org"

# Run `$ bundle install` to install these gems
gem 'sinatra', '~> 1.4.5'
gem 'redcarpet', '~> 3.1.2'
gem 'shotgun', '~> 0.9'


# Run `$ bundle exec COMMAND` to execute your script in the context of the current bundle
# For example, this should be run:
#
#$ bundle exec shotgun

